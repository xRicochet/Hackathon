@model IEnumerable<Hackathon.DTO.PartyDTO>

@{
    ViewBag.Title = "Index";
}

@foreach (var party in Model)
{
<div class="jumbotron">
    <div style="padding-left: 0px; padding-right: 0px; width: auto; margin-left:0px;margin-right:0px;">
        <div id="myCarousel" class="carousel slide">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            @if (party.Pics != null)
            {
            <!-- Carousel items -->
            <div class="carousel-inner">
                @if (party.Pics.Count > 0)
                {
                <div class="item active" style="width:100%;heigh:100%;overflow:hidden;">
                    <img src="@party.Pics[0]" alt="First slide" style="width:100%;height:500px;margin:-75px 0 -75px 0">
                </div>
                }
                @for (int i = 1; i < party.Pics.Count; i++)
                {
                <div class="item" style="width:100%;heigh:100%;overflow:hidden;">
                    <img src="@party.Pics[i]" alt="Second slide" style="width:100%;height:500px;margin:-75px 0 -75px 0">
                </div>
                }
            </div>
            }
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>

        </div>
    </div>   
    <div>
        <p>PARTY DETAIL</p>
    </div>
</div>
}
<script>
        $(".owl-carousel").owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            autoHeight: true,
            autoWidth: true,
        })
</script>