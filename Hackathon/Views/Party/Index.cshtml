@model IEnumerable<Hackathon.DTO.PartyDTO>

@{
    ViewBag.Title = "Index";
}

@foreach (var party in Model)
{
    <a href="@Url.Action("Details", new { Id = party.Id })" >
<div class="jumbotron" style="padding:0 0 0 0"  >
    <div style="padding-left: 0px; padding-right: 0px; width: auto; margin-left:0px;margin-right:0px;">
        <div id="myCarousel" class="carousel slide" >
            
            @if (party.Pics != null)
            {
           
                if (party.Pics.Count > 0)
                {
                <div class="item active" style="width:100%;heigh:100%;overflow:hidden;">
                    <img src="~/Images/@party.Pics[0]" alt="First slide" style="width:100%;height:500px;margin:-75px 0 -75px 0">
                </div>
                }
           
            
            }
           
        </div>
    </div>
    <div>
        <p style="color:black;float:right;padding-right:20px;font-family:Georgia,serif;font-size:1.25em;">@party.Name</p>
        <p style="color:black;padding-left:20px;font-family:Georgia,serif;font-size:1.25em;">@party.StartsAt  @party.LocationName  </p>
    </div>
</div>
        </a>
}
    <script>
        $(".owl-carousel").owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            autoHeight: true,
            autoWidth: true,
        })
    </script>
